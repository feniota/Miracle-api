{{!-- data: { instances: [{name,id}], md:boolean } --}}
<div class="main remove-instance {{#if md}}-md{{else}}-sm{{/if}}-content">
  <div class="hidden" id="remove-instance-storage" data-selected-items="[]"></div>
  {{#each instances}}
  <mdui-card class="instance-card card-default" clickable data-miracle-instance-id="{{ id }}"
    data-miracle-instance-name="{{ name }}">
    <div class="content">
      <div class="content-row flex-center">
        <mdui-icon name="dns"></mdui-icon>
        <div>{{ name }}</div>
      </div>
      <span class="instance-id">实例 ID: {{ id }} </span>
    </div>
  </mdui-card>
  {{/each}}
</div>
<mdui-dialog id="remove-instance-dialog" close-on-overlay-click close-on-esc>
  <span slot="headline">您确定吗？</span>
  <div slot="description" class="content"><span id="remove-instance-dialog-desc">这将删除这 n
      个实例：</span><span>删除实例后，实例将无法访问，且无法恢复。</span>
  </div>
  <mdui-button slot="action" variant="text" id="remove-instance-dialog-cancel">取消</mdui-button>
  <mdui-button slot="action" variant="tonal" id="remove-instance-dialog-ok">确定</mdui-button>
</mdui-dialog>