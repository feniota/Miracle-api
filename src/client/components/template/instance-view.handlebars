{{! data: { instances: [{name, id}] } }}
<div class="main miracle-instance-view ">
  {{#each instances}}
  <mdui-card class="instance-card card-default" clickable miracle-instance-id="{{ id }}">
    <div class="content">
      <div class="instance-name">
        <mdui-icon name="dns--two-tone"></mdui-icon>
        <div class="instance-name-text">{{ name }}</div>
      </div>
      <span class="instance-id">实例 ID: {{ id }} </span>
    </div>
  </mdui-card>
  {{/each}}
</div>